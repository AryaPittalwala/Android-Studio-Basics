<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeActivity">

    <TextView
        android:id="@+id/tv_T1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="64sp"
       android:layout_centerInParent="true"
      android:text="T1" />

    <TextView
        android:id="@+id/tv_T2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/material_dynamic_primary20"
        android:text="T2"
        android:layout_above="@id/tv_T1"
        android:layout_centerInParent="true"
        android:textColor="@color/white"


        android:textSize="64sp" />

    <TextView
        android:id="@+id/tv_T3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/material_dynamic_primary40"
        android:text="T3"
        android:layout_toRightOf="@+id/tv_T1"
        android:layout_centerInParent="true"
        android:textColor="@color/white"


        android:textSize="64sp" />

    <TextView
        android:id="@+id/tv_T4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/material_dynamic_primary70"
        android:text="T4"
        android:layout_below="@id/tv_T1"
        android:layout_centerInParent="true"
        android:textColor="@color/white"


        android:textSize="64sp" />

    <TextView
        android:id="@+id/tv_T5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/material_dynamic_tertiary60"
        android:text="T5"
        android:layout_toLeftOf="@id/tv_T1"
        android:layout_centerInParent="true"
        android:textColor="@color/white"


        android:textSize="64sp" />
</RelativeLayout>